{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build gameMain",
            "type": "shell",
            "command": "g++",
            "args": [
                "gameMain.cpp",
                "headerFiles/common/commonPlayer.cpp",
                "headerFiles/common/commonEnemy.cpp",
                "headerFiles/common/commonCharacter.cpp",
                "-o",
                "gameMain.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Build gameMain.cpp",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "gameMain.cpp",
                "headerFiles/common/commonPlayer.cpp",
                "headerFiles/common/commonEnemy.cpp",
                "headerFiles/common/commonCharacter.cpp",
                "-o",
                "gameMain.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build task for gameMain.cpp"
        }
    ]
}